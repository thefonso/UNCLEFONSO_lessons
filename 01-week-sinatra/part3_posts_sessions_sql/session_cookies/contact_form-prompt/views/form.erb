<h1>Contact Form</h1>

<div class="row">
  <div class="column-left">
    <label for="first_name">First Name *</label>
  </div>
  <div class="column-right">
    <input type="text" name="firstname" maxlength="50" size="30"/>
  </div>
  <div class="clear"></div>
</div>
<div class="row">
  <div class="column-left">
    <label for="first_name">Last Name *</label>
  </div>
  <div class="column-right">
    <input type="text" name="lastname" maxlength="50" size="30"/>
  </div>
  <div class="clear"></div>
</div>
<div class="row">
  <div class="column-left">
    <label for="first_name">Email Address *</label>
  </div>
  <div class="column-right">
    <input type="text" name="email" maxlength="50" size="30"/>
  </div>
  <div class="clear"></div>
</div>
<div class="row">
  <div class="column-left">
    <label for="first_name">Phone Number *</label>
  </div>
  <div class="column-right">
    <input type="text" name="phone" maxlength="50" size="30"/>
  </div>
  <div class="clear"></div>
</div>
<div class="row">
  <div class="column-left">
    <label for="first_name">Comments *</label>
  </div>
  <div class="column-right">
    <textarea name="comments" maxlength="1000" cols="25" rows="6"></textarea>
  </div>
  <div class="clear"></div>
</div>
<div class="row">
  <div class="column-left"></div>
  <div class="column-right">
    <input type="submit" value="Submit"/>
  </div>
  <div class="clear"></div>
</div>
