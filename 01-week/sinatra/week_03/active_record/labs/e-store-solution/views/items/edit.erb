<form action="/items/<%= @item.id %>" method="post">
	<div class="item_title_input_container">
		<label for="title">Title</label>
		<input type="text" name="item[title]" value="<%= @item.title %>"/>
	</div>
	<div class="item_price_input_container">
		<label for="price">Price</label>
		<input type="text" name="item[price]" value="<%= @item.price %>"/>
	</div>
	<div class="item_description_input_container">
		<label for="description">Description</label>
		<textarea name="item[description]"><%= @item.description %></textarea>
	</div>
	<button type="submit">Submit</button>
	<br>
	<a href="/items/<%= @item.id %>/delete">Delete</a> | <a href="/">Cancel</a>
</form>
