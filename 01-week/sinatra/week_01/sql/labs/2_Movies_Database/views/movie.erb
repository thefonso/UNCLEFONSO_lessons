<header><a href='/'><%= 'Movie' %></a></header>

<form action='/' method='get'>
  <input type='text' name='title' autofocus>
  <button><%= 'Get Movie' %></button>
</form>

<% if @hash.present? %>

  <section>
    <img src='<%= @hash['Poster'] %>'>
  </section>

  <section>
    <ul>
      <li><a target='_blank' href='https://www.google.com/search?q=<%= @hash['Title'] %>'><%= @hash['Title'] %></a></li>
      <li><%= @hash['Year'] %></li>
      <li><%= @hash['Rated'] %></li>
      <li><%= @hash['Released'] %></li>
      <li><%= @hash['Runtime'] %></li>
      <li><%= @hash['Genre'] %></li>
      <li><%= @hash['Director'] %></li>
      <li><%= @hash['Writer'] %></li>
      <li><%= @hash['Actors'] %></li>
      <li><%= @hash['Plot'] %></li>
    </ul>
  </section>

<% end %>
